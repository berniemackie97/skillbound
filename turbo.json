{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "AUTH_SECRET",
    "AUTH_TRUST_HOST",
    "AUTH_URL",
    "COLLECTIONLOG_BASE_URL",
    "COLLECTIONLOG_CACHE_TTL_MS",
    "CONTENT_BUNDLE_CACHE_TTL_MS",
    "CRON_SECRET",
    "DATABASE_URL",
    "DATABASE_URL_UNPOOLED",
    "HISCORES_CACHE_TTL_MS",
    "HISCORES_USER_AGENT",
    "INTEGRATIONS_USER_AGENT",
    "NEON_PROJECT_ID",
    "OSRSBOX_BASE_URL",
    "OSRSBOX_CACHE_TTL_MS",
    "PGDATABASE",
    "PGHOST",
    "PGHOST_UNPOOLED",
    "PGPASSWORD",
    "PGUSER",
    "POSTGRES_DATABASE",
    "POSTGRES_HOST",
    "POSTGRES_PASSWORD",
    "POSTGRES_PRISMA_URL",
    "POSTGRES_URL",
    "POSTGRES_URL_NO_SSL",
    "POSTGRES_URL_NON_POOLING",
    "POSTGRES_USER",
    "RATE_LIMIT_REQUESTS",
    "RATE_LIMIT_WINDOW_SECONDS",
    "SKILLBOUND_USER_AGENT",
    "TEMPLE_BASE_URL",
    "TEMPLE_CACHE_TTL_MS",
    "WIKI_PRICES_BASE_URL",
    "WIKI_PRICES_CACHE_TTL_MS",
    "WIKI_PRICES_DMM_BASE_URL",
    "WIKI_PRICES_INTERVAL_CACHE_TTL_MS",
    "WIKI_PRICES_MAPPING_CACHE_TTL_MS",
    "WIKI_PRICES_TIMESERIES_CACHE_TTL_MS",
    "WISE_OLD_MAN_BASE_URL",
    "WISE_OLD_MAN_CACHE_TTL_MS",
    "WISE_OLD_MAN_IMPORT_ENABLED"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
