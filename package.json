{
  "name": "skillbound",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "db:migrate": "pnpm --filter @skillbound/database migrate",
    "db:studio": "pnpm --filter @skillbound/database studio",
    "db:generate": "pnpm --filter @skillbound/database generate",
    "db:push": "pnpm --filter @skillbound/database push",
    "db:seed:progression": "pnpm --filter @skillbound/database seed:progression",
    "sync:skill-calculators": "tsx scripts/sync-skill-calculators.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@skillbound/eslint-config": "workspace:*",
    "@skillbound/prettier-config": "workspace:*",
    "@skillbound/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.6"
  },
  "pnpm": {
    "overrides": {
      "@next/eslint-plugin-next>glob": "^10.5.0",
      "@auth/core": "0.41.1",
      "esbuild": "0.25.12"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "ESLINT_USE_FLAT_CONFIG=false eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@skillbound/prettier-config"
}
